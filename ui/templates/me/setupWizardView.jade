ol.breadcrumb
    li
        a(href='#!/backend/dashboard') <%= breadcrumb.home %>
    li
        a(href='#!/backend/me/profile') <%= breadcrumb.myAccount %>
    li.active <%= viewName %>
// //breadcrumb
#content
    .row
        .col-lg-12

            section.panel.wizard-form.corner-flip(role="form",parsley-validate,novalidate="novalidate")
                header.panel-heading
                    h2 <%= viewTitle %>
                    label(class="color",style="background-color:#edece5")<%= twoTitle %>
                div.panel-body
                    div
                        p <%=howSetUpTitle%>
                        ul.choose-mode.iCheck(data-color='red')
                          li
                            input(type="radio",name="mode",value="create", parsley-trigger="ifClicked ifChanged",parsley-required="true",parsley-group="setup-mode")
                            label <%=setNewCompany%>
                          li
                            input(type="radio",name="mode",value="join", parsley-trigger="ifClicked ifChanged",parsley-group="setup-mode")
                            label <%=joinCompany%>
                    form.form-create-company(role="form",parsley-validate,novalidate="novalidate")
                        hr
                        p <%=tableTitle%>
                        div.form-group
                            label <%=companyName%>
                            input.form-control(name="name",required,parsley-mincheck="3",type="text",placeholder!="<%=companyName%>",parsley-remote-method="POST",parsley-remote-message!="<%= validation.companyNotUnique %>")
                        div.form-group
                            label Phone Number
                            div(style="height:34px;")
                                input.form-control.pull-left(name="phone-country-code",required,placeholder!="<%= phoneCountryCode %>",value!="<%= phoneDefaultCountryCode %>",style="width:19%;margin-right:1%;")
                                input.form-control.pull-left(name="phone-area-code",required,placeholder!="<%= phoneAreaCode %>",style="width:24%;margin-right:1%;")
                                input.form-control.pull-left(name="phone-number",required,type="tel",placeholder!="<%= phoneNumber %>",style="width:55%")
                        div.form-group
                            label Address
                            div(style="height:34px;margin-bottom:5px;")
                                input.form-control.pull-left(name="address-country",parsley-mincheck="2",required,placeholder!="<%= addressCountry %>",value!="<%= addressDefaultCountry %>",style="width:32%;margin-right:1%;")
                                input.form-control.pull-left(name="address-province",parsley-mincheck="2",required,placeholder!="<%= addressProvince %>",style="width:33%;margin-right:1%;")
                                input.form-control.pull-left(name="address-city",parsley-mincheck="2",required,placeholder!="<%= addressCity %>",style="width:33%")
                            div(style="height:34px;")
                                input.form-control.pull-left(name="address-street",parsley-mincheck="6",required,placeholder!="<%= addressStreet %>",style="width:74%;margin-right:1%;")
                                input.form-control.pull-left(name="address-zipcode",required,parsley-type="digits",placeholder!="<%= addressZipcode %>",style="width:25%")
                        div.form-group
                            label <%=webSite%>
                            input.form-control(name="website",type="url",placeholder="http://www.yourcompany.com")
                        button.hidden(type="submit")
                    form.form-join-company(role="form",parsley-validate,novalidate="novalidate")
                        hr
                        p <%=joinCompanyTitle%>
                        div.form-group
                            label <%=companyCode%>
                            input.form-control(name="token",style="text-transform: uppercase",required,type="text",parsley-remote-method="POST",parsley-remote-message!="<%= validation.tokenInvalid %>",parsley-required="true",placeholder!="<%= invitationCodePlaceHolder %>")
                        button.hidden(type="submit")
                footer.panel-footer
                    button.btn-next.btn.btn-theme(type="submit") <%=nextstep%> &nbsp;
                        i.fa.fa-angle-right
